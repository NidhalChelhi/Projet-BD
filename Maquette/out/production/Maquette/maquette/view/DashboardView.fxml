            xmlns="http://javafx.com/javafx/21.0.5" fx:controller="maquette.controller.DashboardController"
>
    <left>
        <VBox id="sidebar">
            <Button text="Gestion des lieux" onAction="#showLieuxPage">
            </Button>

            <Button text="Gestion des spectacles" onAction="#showSpectaclesPage">
            </Button>

        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentArea" id="main-content"/>
    </center>
</BorderPane>
